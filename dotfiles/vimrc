set shiftwidth=4
set softtabstop=4
set smarttab
set expandtab

"Set title of window to file name
set title


set showmatch
set matchtime=3
set incsearch
set hlsearch
"Ignores case for searches
set ignorecase
"case-sensitive if search contains an uppercase character
set smartcase


"Remember previous buffer session
exec 'set viminfo=%,' . &viminfo


set noswapfile

